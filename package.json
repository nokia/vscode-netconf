{
	"name": "netconf-client",
	"displayName": "NETCONF client for Visual Studio Code",
	"description": "NETCONF client by Nokia",
	"version": "1.0.0",
	"author": {
		"name": "Sven Wisotzky",
		"url": "https://www.linkedin.com/in/sven-wisotzky-44788333"
	},
	"publisher": "NOKIA",
	"icon": "resources/NOKIA_Icon.png",
	"contributors": [
		{
			"name": "Sven Wisotzky"
		}
	],
	"keywords": [
		"NETCONF",
		"SSH",
		"Interactive",
		"XML",
		"Nokia"
	],
	"extensionKind": [
		"ui",
		"workspace"
	],
	"license": "BSD 3-Clause",
	"galleryBanner": {
		"color": "#005AFF",
		"theme": "dark"
	},
	"engines": {
		"vscode": "^1.76.0"
	},
	"categories": [
		"NetDevOps"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/nokia/vscode-netconf"
	},
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "netconf.connect",
				"category": "netconf",
				"title": "connect",
				"icon": "$(sign-in)"
			},
			{
				"command": "netconf.disconnect",
				"category": "netconf",
				"title": "disconnect",
				"icon": "$(sign-out)"
			},
			{
				"command": "netconf.rpc",
				"category": "netconf",
				"title": "NETCONF RPC",
				"icon": "$(play)"
			},
			{
				"command": "netconf.getcfg",
				"category": "netconf",
				"title": "netconf <get-config>",
				"icon": "$(file-code)"
			},
			{
				"command": "netconf.get",
				"category": "netconf",
				"title": "netconf <get>",
				"icon": "$(file-binary)"
			},
			{
				"command": "netconf.notifications",
				"category": "netconf",
				"title": "notifications",
				"icon": "$(comment)"
			},
			{
				"command": "netconf.lock",
				"category": "netconf",
				"title": "lock",
				"icon": "$(lock)"
			},
			{
				"command": "netconf.unlock",
				"category": "netconf",
				"title": "unlock",
				"icon": "$(unlock)"
			},
			{
				"command": "netconf.validate",
				"category": "netconf",
				"title": "validate",
				"icon": "$(tasklist)"
			},
			{
				"command": "netconf.discard",
				"category": "netconf",
				"title": "discard",
				"icon": "$(circle-slash)"
			},
			{
				"command": "netconf.commit",
				"category": "netconf",
				"title": "commit",
				"icon": "$(play-circle)"
			},
			{
				"command": "netconf.pickServer",
				"category": "netconf",
				"title": "pickServer"
			},
			{
				"command": "netconf.subscribe",
				"category": "netconf",
				"title": "subscribe",
				"icon": "$(comment-discussion)"
			}
		],
		"menus": {
			"editor/title/run": [
				{
					"when": "resourceLangId == xml",
					"command": "netconf.rpc"
				}
			]
		},
		"configuration": {
			"title": "NETCONF client",
			"properties": {
				"netconf.serverList": {
					"title": "NETCONF servers",
					"markdownDescription": "NETCONF servers",
					"scope": "window",
					"type": "array",
					"items": {
						"type": "object",
						"description": "NETCONF server entry",
						"properties": {
							"id": {
								"type": "string",
								"uniqueItems": true
							},
							"host": {
								"description": "Hostname or IP address of the NETCONF server",
								"type": "string"
							},
							"port": {
								"type": "number",
								"default": 830
							},
							"username": {
								"type": "string",
								"default": "admin"
							},
							"password": {
								"type": "string",
								"default": "admin"
							}
						},
						"additionalProperties": false,
						"required": [
							"id",
							"host"
						]
					}
				},
				"netconf.activeServer": {
					"title": "Active Server",
					"markdownDescription": "Selected NETCONF server.",
					"scope": "window",
					"type": "string"
				},
				"netconf.sshKeepAlive": {
					"title": "SSH Keep-Alive",
					"markdownDescription": "SSH keep-alive in seconds. Default: 0 (disabled).",
					"scope": "window",
					"type": "number",
					"default": 0
				},
				"netconf.keysFile": {
					"title": "Private keys-file",
					"markdownDescription": "Private key file for key-based authentication. Default: ~/.ssh/id_rsa",
					"scope": "window",
					"type": "string",
					"default": "~/.ssh/id_rsa"
				},
				"netconf.sshDebug": {
					"title": "SSH Debug",
					"markdownDescription": "Enable ssh2 debug logs. Default: false.",
					"scope": "window",
					"type": "boolean",
					"default": false
				},
				"netconf.prettify": {
					"title": "Prettify XML",
					"markdownDescription": "Prettify NETCONF XML responses.",
					"scope": "window",
					"type": "boolean",
					"default": false
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/ssh2": ">=1.11.8",
		"@types/vscode": "^1.76.0",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"eslint": "^8.37.0",
		"typescript": "^5.0.4"
	},
	"dependencies": {
		"fast-xml-parser": "^4.1.3",
		"ssh2": ">=1.11.0",
		"xml-formatter": "^3.3.2"
	},
	"__metadata": {
		"isApplicationScoped": false,
		"installedTimestamp": 1680092475295
	}
}